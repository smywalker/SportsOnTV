<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.smashedcontrollers.sportsontv.Menu"
    android:orientation="vertical"
    android:background="@drawable/grassbg">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/basketballbutton"
        android:onClick="onBasketClick"
        android:id="@+id/imageButton2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/com_facebook_auth_dialog_cancel_background" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/camera"
        android:onClick="onPictureClick"
        android:id="@+id/imageButton3"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageButton2"
        android:background="@drawable/com_facebook_auth_dialog_cancel_background" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ball"
        android:onClick="onButtonClick"
        android:id="@+id/imageButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/com_facebook_auth_dialog_cancel_background" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/chatbutton"
        android:onClick="onFeedbackClick"
        android:id="@+id/imageButton4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/com_facebook_auth_dialog_cancel_background" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/music"
        android:onClick="onMusicClick"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/imageButton5"
        android:background="@drawable/com_facebook_auth_dialog_cancel_background" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ut"
        android:onClick="onTubeClick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageButton6"
        android:background="@drawable/com_facebook_auth_dialog_cancel_background" />
</RelativeLayout>
